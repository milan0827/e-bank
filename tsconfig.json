{
  "compilerOptions": {
    "typeRoots": ["src/types", "./node_modules/@types"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
    // "types": ["node", "jest"]
  },
  "include": ["src/types/**/*.d.ts", "./**/*.ts"]
}
